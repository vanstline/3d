{
    "compilerOptions": {
        "module": "esnext",
        "target": "esnext",
        "lib": ["esnext", "dom", "dom.iterable", "scripthost", "es2015"],
        "sourceMap": true,
        "baseUrl": ".",
        "jsx": "react-jsx",
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "suppressImplicitAnyIndexErrors": true,
        "noUnusedLocals": true,
        "allowJs": true,
        "skipLibCheck": true,
        "experimentalDecorators": true,
        "strict": true,
        "paths": {
            "@/*": ["./src/*"],
            "@@/*": ["./src/.umi/*"],
        }
    },
    "include": [
        "mock/**/*.ts",
        "src/**/*.ts",
        "src/**/*.tsx",
        "tests/**/*.ts",
        "tests/**/*.tsx",
        "test/**/*.ts",
        "test/**/*.tsx",
        "__test__/**/*.ts",
        "__test__/**/*.tsx",
        "typings/**/*.ts",
        "config/**/*.ts",
        "src/typings.d.ts"
, "src/pages/ar/index.jsx"    ],
    "exclude": ["node_modules", "build", "dist", "scripts", "src/.umi/*", "src/env/*", "webpack", "jest"]
}
